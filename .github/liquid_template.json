[
  {
    "language": "Liquid",
    "extensions": [
      ".liquid"
    ],
    "markers": [
      {
        "type": "line",
        "pattern": "\\#"
      },
      {
        "type": "block",
        "pattern": {
          "start": "{% comment %}",
          "end": "{% endcomment %}"
        }
      }
    ]
  }
]